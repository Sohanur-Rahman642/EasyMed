<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProfileActivity">


    <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"

        android:id="@+id/doctor_profile_image"
        android:layout_width="175dp"
        android:layout_height="wrap_content"

        android:layout_marginStart="8dp"
        android:layout_marginTop="20dp"

        android:layout_marginEnd="8dp"



        android:src="@drawable/profile_pic1"
        app:civ_border_color="#03A9F4"
        app:civ_border_width="2dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/pr_user_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_marginTop="10dp"



        android:fontFamily="sans-serif-condensed"
        android:text="kk jj yy"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/doctor_profile_image"

        android:padding="10dp"
        android:background="#3F51B5"


        />

    <TextView
        android:id="@+id/pr_email_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_marginTop="10dp"

        android:padding="10dp"


        android:background="#3F51B5"
        android:fontFamily="sans-serif-condensed"
        android:text="kk.jj99@gmail.com"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/pr_user_name"

        />

    <TextView
        android:id="@+id/pr_contact_number"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_marginTop="10dp"



        android:padding="10dp"


        android:background="#3F51B5"
        android:fontFamily="sans-serif-condensed"
        android:text="+8801789XXX302"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"

        app:layout_constraintTop_toBottomOf="@id/pr_email_id"


        />

    <TextView
        android:id="@+id/pr_ad_house_no"
        android:layout_width="120dp"
        android:layout_height="wrap_content"

        android:layout_marginStart="75dp"
        android:layout_marginTop="10dp"


        android:fontFamily="sans-serif-condensed"
        android:padding="5dp"
        android:text="House No:"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="14sp"
        android:textStyle="bold"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/pr_contact_number" />


    <TextView
        android:id="@+id/pr_house_no"
        android:layout_width="150dp"
        android:layout_height="wrap_content"


        android:layout_marginStart="15dp"
        android:layout_marginTop="10dp"


        android:layout_marginEnd="8dp"
        android:background="@drawable/corner_textview"
        android:backgroundTint="#4CAF50"
        android:fontFamily="sans-serif-condensed"
        android:padding="5dp"
        android:text="254/L"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@id/pr_ad_house_no"

        app:layout_constraintTop_toBottomOf="@id/pr_contact_number" />
    <TextView
        android:id="@+id/pr_ad_road_no"
        android:layout_width="120dp"
        android:layout_height="wrap_content"

        android:layout_marginStart="75dp"
        android:layout_marginTop="10dp"


        android:fontFamily="sans-serif-condensed"
        android:padding="5dp"
        android:text="Road No:"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="14sp"
        android:textStyle="bold"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/pr_ad_house_no" />
    <TextView
        android:id="@+id/pr_road_no"
        android:layout_width="150dp"
        android:layout_height="wrap_content"


        android:layout_marginStart="15dp"
        android:layout_marginTop="10dp"


        android:layout_marginEnd="8dp"
        android:background="@drawable/corner_textview"
        android:backgroundTint="#4CAF50"
        android:fontFamily="sans-serif-condensed"
        android:padding="5dp"
        android:text="6/c"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@id/pr_ad_road_no"

        app:layout_constraintTop_toBottomOf="@id/pr_ad_house_no" />

    <TextView
        android:id="@+id/pr_ad_block"
        android:layout_width="120dp"
        android:layout_height="wrap_content"

        android:layout_marginStart="75dp"
        android:layout_marginTop="10dp"


        android:fontFamily="sans-serif-condensed"
        android:padding="5dp"
        android:text="Block:"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="14sp"
        android:textStyle="bold"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/pr_ad_road_no" />


    <TextView
        android:id="@+id/pr_block"
        android:layout_width="150dp"
        android:layout_height="wrap_content"


        android:layout_marginStart="15dp"
        android:layout_marginTop="10dp"


        android:layout_marginEnd="8dp"
        android:background="@drawable/corner_textview"
        android:backgroundTint="#4CAF50"
        android:fontFamily="sans-serif-condensed"
        android:padding="5dp"
        android:text="B"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@id/pr_ad_block"

        app:layout_constraintTop_toBottomOf="@id/pr_ad_road_no" />


    <TextView
        android:id="@+id/pr_ad_area"
        android:layout_width="120dp"
        android:layout_height="wrap_content"

        android:layout_marginStart="75dp"
        android:layout_marginTop="10dp"


        android:fontFamily="sans-serif-condensed"
        android:padding="5dp"
        android:text="Area:"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="14sp"
        android:textStyle="bold"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/pr_ad_block" />


    <TextView
        android:id="@+id/pr_area"
        android:layout_width="150dp"
        android:layout_height="wrap_content"


        android:layout_marginStart="15dp"
        android:layout_marginTop="10dp"


        android:layout_marginEnd="8dp"
        android:background="@drawable/corner_textview"
        android:backgroundTint="#4CAF50"
        android:fontFamily="sans-serif-condensed"
        android:padding="5dp"
        android:text="Bashundhara R/A"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@id/pr_ad_area"

        app:layout_constraintTop_toBottomOf="@id/pr_ad_block" />


    <TextView
        android:id="@+id/pr_ad_city"
        android:layout_width="120dp"
        android:layout_height="wrap_content"

        android:layout_marginStart="75dp"
        android:layout_marginTop="10dp"


        android:fontFamily="sans-serif-condensed"
        android:padding="5dp"
        android:text="City:"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="14sp"
        android:textStyle="bold"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/pr_ad_area" />


    <TextView
        android:id="@+id/pr_city"
        android:layout_width="150dp"
        android:layout_height="wrap_content"


        android:layout_marginStart="15dp"
        android:layout_marginTop="10dp"


        android:layout_marginEnd="8dp"
        android:background="@drawable/corner_textview"
        android:backgroundTint="#4CAF50"
        android:fontFamily="sans-serif-condensed"
        android:padding="5dp"
        android:text="Dhaka"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@id/pr_ad_city"

        app:layout_constraintTop_toBottomOf="@id/pr_ad_area" />



    <TextView
        android:id="@+id/pr_ad_postal_code"
        android:layout_width="120dp"
        android:layout_height="wrap_content"

        android:layout_marginStart="75dp"
        android:layout_marginTop="10dp"


        android:fontFamily="sans-serif-condensed"
        android:padding="5dp"
        android:text="Postal Code:"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="14sp"
        android:textStyle="bold"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/pr_ad_city" />


    <TextView
        android:id="@+id/pr_postal_code"
        android:layout_width="150dp"
        android:layout_height="wrap_content"


        android:layout_marginStart="15dp"
        android:layout_marginTop="10dp"


        android:layout_marginEnd="8dp"
        android:background="@drawable/corner_textview"
        android:backgroundTint="#4CAF50"
        android:fontFamily="sans-serif-condensed"
        android:padding="5dp"
        android:text="1229"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@id/pr_ad_postal_code"

        app:layout_constraintTop_toBottomOf="@id/pr_ad_city" />



    <TextView
        android:id="@+id/pr_ad_country"
        android:layout_width="120dp"
        android:layout_height="wrap_content"

        android:layout_marginStart="75dp"
        android:layout_marginTop="10dp"


        android:fontFamily="sans-serif-condensed"
        android:padding="5dp"
        android:text="Country:"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="14sp"
        android:textStyle="bold"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/pr_ad_postal_code" />


    <TextView
        android:id="@+id/pr_country"
        android:layout_width="150dp"
        android:layout_height="wrap_content"


        android:layout_marginStart="15dp"
        android:layout_marginTop="10dp"


        android:layout_marginEnd="8dp"
        android:background="@drawable/corner_textview"
        android:backgroundTint="#4CAF50"
        android:fontFamily="sans-serif-condensed"
        android:padding="5dp"
        android:text="Bangladesh"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@id/pr_ad_country"

        app:layout_constraintTop_toBottomOf="@id/pr_ad_postal_code" />


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/below_layout"
        android:layout_width="match_parent"
        android:layout_height="400dp"

        app:layout_constraintTop_toBottomOf="@id/pr_country"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="5dp"
        android:background="@drawable/corner_textview"
        android:backgroundTint="#ffffff"




        >









        <com.google.android.material.button.MaterialButton
            android:id="@+id/update_btn"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="@+id/below_layout"
            app:layout_constraintStart_toStartOf="@+id/below_layout"
            app:layout_constraintEnd_toEndOf="parent"

            android:layout_marginTop="30dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"

            android:text="Update"
            android:textSize="16sp"
            android:textAllCaps="false"
            android:fontFamily="sans-serif-condensed"
            android:textStyle="bold"




            app:rippleColor="@color/button_pressed"
            android:backgroundTint="#FFFFFF"
            app:strokeWidth="2dp"
            app:strokeColor="#FF9800"
            android:textColor="#FF9800" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/sign_out_btn"
            style="@style/Widget.MaterialComponents.Button.TextButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            app:layout_constraintTop_toBottomOf="@id/update_btn"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"

            android:layout_marginTop="15dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"

            android:text="Sign Out"
            android:textSize="16sp"
            android:textAllCaps="false"
            android:fontFamily="sans-serif-condensed"
            android:textStyle="bold"

            android:background="@drawable/corner_textview"
            android:backgroundTint="#FFFFFF"
            app:strokeWidth="2dp"
            app:strokeColor="#FF9800"
            android:textColor="#FF9800" />





    </androidx.constraintlayout.widget.ConstraintLayout>








</androidx.constraintlayout.widget.ConstraintLayout>