<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UpdateProfile">


    <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"

        android:id="@+id/profile_image1"
        android:layout_width="175dp"
        android:layout_height="wrap_content"

        android:layout_marginStart="8dp"
        android:layout_marginTop="20dp"

        android:layout_marginEnd="8dp"



        android:src="@drawable/profile_pic1"
        app:civ_border_color="#03A9F4"
        app:civ_border_width="2dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <EditText
        android:id="@+id/pr_user_name1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_marginTop="10dp"



        android:fontFamily="sans-serif-condensed"
        android:text="kk jj yy"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/profile_image1"

        android:padding="10dp"
        android:background="#3F51B5"


        />

    <EditText
        android:id="@+id/pr_email_id1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_marginTop="10dp"

        android:padding="10dp"


        android:background="#3F51B5"
        android:fontFamily="sans-serif-condensed"
        android:text="kk.jj99@gmail.com"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/pr_user_name1"

        />

    <EditText
        android:id="@+id/pr_contact_number1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_marginTop="10dp"



        android:padding="10dp"


        android:background="#3F51B5"
        android:fontFamily="sans-serif-condensed"
        android:text="+8801789XXX302"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"

        app:layout_constraintTop_toBottomOf="@id/pr_email_id1"


        />

    <TextView
        android:id="@+id/pr_ad_address1"
        android:layout_width="120dp"
        android:layout_height="wrap_content"

        android:layout_marginStart="75dp"
        android:layout_marginTop="10dp"


        android:fontFamily="sans-serif-condensed"
        android:padding="5dp"
        android:text="Address:"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="14sp"
        android:textStyle="bold"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/pr_contact_number1" />


    <EditText
        android:id="@+id/pr_address1"
        android:layout_width="150dp"
        android:layout_height="120dp"


        android:layout_marginStart="15dp"
        android:layout_marginTop="10dp"


        android:layout_marginEnd="8dp"
        android:background="@drawable/corner_textview"
        android:backgroundTint="#4CAF50"
        android:fontFamily="sans-serif-condensed"
        android:padding="5dp"
        android:text=""
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@id/pr_ad_address1"

        app:layout_constraintTop_toBottomOf="@id/pr_contact_number1" />



    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/below_layout"
        android:layout_width="match_parent"
        android:layout_height="400dp"

        app:layout_constraintTop_toBottomOf="@id/pr_address1"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="5dp"
        android:background="@drawable/corner_textview"
        android:backgroundTint="#ffffff"




        >









        <com.google.android.material.button.MaterialButton
            android:id="@+id/update_change_btn1"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="@+id/below_layout"
            app:layout_constraintStart_toStartOf="@+id/below_layout"
            app:layout_constraintEnd_toEndOf="parent"

            android:layout_marginTop="30dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"

            android:text="Update Changes"
            android:textSize="16sp"
            android:textAllCaps="false"
            android:fontFamily="sans-serif-condensed"
            android:textStyle="bold"




            app:rippleColor="@color/button_pressed"
            android:backgroundTint="#FFFFFF"
            app:strokeWidth="2dp"
            app:strokeColor="#FF9800"
            android:textColor="#FF9800" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/discard_change_btn"
            style="@style/Widget.MaterialComponents.Button.TextButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            app:layout_constraintTop_toBottomOf="@id/update_change_btn1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"

            android:layout_marginTop="15dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"

            android:text="Discard Changes"
            android:textSize="16sp"
            android:textAllCaps="false"
            android:fontFamily="sans-serif-condensed"
            android:textStyle="bold"

            android:background="@drawable/corner_textview"
            android:backgroundTint="#FFFFFF"
            app:strokeWidth="2dp"
            app:strokeColor="#FF9800"
            android:textColor="#FF9800" />





    </androidx.constraintlayout.widget.ConstraintLayout>








</androidx.constraintlayout.widget.ConstraintLayout>