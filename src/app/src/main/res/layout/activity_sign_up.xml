<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SignUpActivity"

    android:background="#4e0d3a"
    >

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/firstname_input_field"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"

        style="@style/TextInputLayout"
        app:startIconDrawable="@drawable/profile"
        app:startIconTint="#ffffff"


        android:textColor="#ffffff"
        android:textColorHint="#ffffff"


        android:hint="@string/name">

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:maxLines="1"

            />
    </com.google.android.material.textfield.TextInputLayout>



    //Email
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/email_input_field"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        app:layout_constraintTop_toBottomOf="@id/firstname_input_field"

        android:layout_marginTop="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        app:layout_constraintStart_toEndOf="parent"
        app:layout_constraintEnd_toEndOf="parent"

        style="@style/TextInputLayout"

        app:startIconDrawable="@drawable/email"
        app:startIconTint="#ffff"

        android:textColor="#ffffff"
        android:textColorHint="#ffffff"


        android:hint="@string/email">

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:maxLines="1"
            android:textSize="18sp"

            />
    </com.google.android.material.textfield.TextInputLayout>


    //Phone

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/phone_input_field"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        app:layout_constraintTop_toBottomOf="@id/email_input_field"

        android:layout_marginTop="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        app:layout_constraintStart_toEndOf="parent"
        app:layout_constraintEnd_toEndOf="parent"

        style="@style/TextInputLayout"

        app:startIconDrawable="@drawable/phone"
        app:startIconTint="#ffff"

        android:textColor="#ffffff"
        android:textColorHint="#ffffff"


        android:hint="@string/phone">

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:maxLines="1"
            android:textSize="18sp"

            />
    </com.google.android.material.textfield.TextInputLayout>



    //Address

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/address_input_field"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        app:layout_constraintTop_toBottomOf="@id/phone_input_field"

        android:layout_marginTop="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        app:layout_constraintStart_toEndOf="parent"
        app:layout_constraintEnd_toEndOf="parent"

        style="@style/TextInputLayout"


        app:startIconDrawable="@drawable/location"
        app:startIconTint="#ffff"

        android:textColor="#ffffff"
        android:textColorHint="#ffffff"


        android:hint="@string/address">

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:maxLines="1"
            android:textSize="18sp"

            />
    </com.google.android.material.textfield.TextInputLayout>









</androidx.constraintlayout.widget.ConstraintLayout>