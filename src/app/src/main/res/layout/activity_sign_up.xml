<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SignUpActivity"

    android:background="#4e0d3a"
    >

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/firstname_input_field"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"

        style="@style/TextInputLayout"
        app:startIconDrawable="@drawable/profile"
        app:startIconTint="#ffffff"


        android:textColor="#ffffff"
        android:textColorHint="#ffffff"


        android:hint="@string/name">

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:maxLines="1"

            />
    </com.google.android.material.textfield.TextInputLayout>



    //Email
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/email_input_field"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        app:layout_constraintTop_toBottomOf="@id/firstname_input_field"

        android:layout_marginTop="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        app:layout_constraintStart_toEndOf="parent"
        app:layout_constraintEnd_toEndOf="parent"

        style="@style/TextInputLayout"

        app:startIconDrawable="@drawable/email"
        app:startIconTint="#ffff"

        android:textColor="#ffffff"
        android:textColorHint="#ffffff"


        android:hint="@string/email">

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:maxLines="1"
            android:textSize="18sp"

            />
    </com.google.android.material.textfield.TextInputLayout>


    //Phone

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/phone_input_field"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        app:layout_constraintTop_toBottomOf="@id/email_input_field"

        android:layout_marginTop="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        app:layout_constraintStart_toEndOf="parent"
        app:layout_constraintEnd_toEndOf="parent"

        style="@style/TextInputLayout"

        app:startIconDrawable="@drawable/phone"
        app:startIconTint="#ffff"

        android:textColor="#ffffff"
        android:textColorHint="#ffffff"


        android:hint="@string/phone">

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:maxLines="1"
            android:textSize="18sp"

            />
    </com.google.android.material.textfield.TextInputLayout>



    //Address

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/address_input_field"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        app:layout_constraintTop_toBottomOf="@id/phone_input_field"

        android:layout_marginTop="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        app:layout_constraintStart_toEndOf="parent"
        app:layout_constraintEnd_toEndOf="parent"

        style="@style/TextInputLayout"


        app:startIconDrawable="@drawable/location"
        app:startIconTint="#ffff"

        android:textColor="#ffffff"
        android:textColorHint="#ffffff"


        android:hint="@string/address">

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:maxLines="1"
            android:textSize="18sp"

            />
    </com.google.android.material.textfield.TextInputLayout>



    //City

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/city_input_field"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        app:layout_constraintTop_toBottomOf="@id/address_input_field"

        android:layout_marginTop="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        app:layout_constraintStart_toEndOf="parent"
        app:layout_constraintEnd_toEndOf="parent"

        style="@style/TextInputLayout"

        android:textColor="#ffffff"
        android:textColorHint="#ffffff"


        android:hint="@string/city">

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:maxLines="1"
            android:textSize="18sp"

            />
    </com.google.android.material.textfield.TextInputLayout>


    //Gender

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/gender_input_field"
        android:layout_width="150dp"
        android:layout_height="wrap_content"

        app:layout_constraintTop_toBottomOf="@id/city_input_field"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintStart_toEndOf="@id/age_input_field"

        android:layout_marginTop="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"


        style="@style/TextInputLayout"

        android:textColor="#ffffff"
        android:textColorHint="#ffffff"


        android:hint="@string/gender">

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:maxLines="1"
            android:textSize="18sp"

            />
    </com.google.android.material.textfield.TextInputLayout>

    //Age

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/age_input_field"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="10dp"

        app:layout_constraintTop_toBottomOf="@id/city_input_field"
        app:layout_constraintStart_toEndOf="@id/gender_input_field"
        app:layout_constraintEnd_toEndOf="parent"

        style="@style/TextInputLayout"

        android:textColor="#ffffff"
        android:textColorHint="#ffffff"


        android:hint="@string/age">

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:maxLines="1"
            android:textSize="18sp"

            />
    </com.google.android.material.textfield.TextInputLayout>


    <com.google.android.material.button.MaterialButton
        android:id="@+id/caButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/gender_input_field"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="5dp"
        android:layout_marginStart="60dp"
        android:layout_marginEnd="60dp"
        style="@style/Button"
        android:text="Create an Account"
        android:textSize="20sp"
        android:textAllCaps="false"
        android:fontFamily="sans-serif-condensed"

        app:cornerRadius="16dp"
        app:backgroundTint="#3F51B5"

        />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/alreadyCa_button"
        style="@style/Widget.MaterialComponents.Button.TextButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        app:layout_constraintTop_toBottomOf="@id/caButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"

        android:layout_marginTop="5dp"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp"

        android:text="Already have an account? Log in"
        android:textSize="16sp"
        android:textAllCaps="false"
        android:fontFamily="sans-serif-condensed"

        app:cornerRadius="16dp"
        android:textColor="#FFC107" />














</androidx.constraintlayout.widget.ConstraintLayout>