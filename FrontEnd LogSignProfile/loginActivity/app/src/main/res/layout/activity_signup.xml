<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="#67032F"

    tools:context=".SignupActivity">

    <EditText
        android:id="@+id/etFirstname"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:background="#fff"
        android:layout_marginTop="5dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:ems="10"
        android:hint="First name"
        android:textAlignment="center"/>

    <EditText
        android:id="@+id/etLastname"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:background="#fff"
        android:layout_marginTop="25dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/etFirstname"
        android:ems="10"
        android:hint="Last Name"
        android:textAlignment="center"/>


    <EditText
        android:id="@+id/etEmail"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:background="#fff"
        android:layout_marginTop="25dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/etLastname"
        android:ems="10"
        android:hint="Email Id (example: name@gmail.com)"
        android:textAlignment="center"/>

    <EditText
        android:id="@+id/etHouse_no"
        android:layout_width="167dp"
        android:layout_height="50dp"
        android:layout_below="@+id/etEmail"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentEnd="@+id/etRoad_no"
        android:layout_alignParentRight="true"
        android:layout_marginTop="25dp"
        android:layout_marginRight="381dp"
        android:background="#fff"
        android:ems="10"
        android:hint="House Number"
        android:textAlignment="center" />

    <EditText
        android:id="@+id/etRoad_no"
        android:layout_width="167dp"
        android:layout_height="50dp"
        android:layout_below="@+id/etEmail"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="25dp"
        android:background="#fff"
        android:ems="10"
        android:hint="Road Number"
        android:textAlignment="center" />


    <EditText
        android:id="@+id/etBlock"
        android:layout_width="167dp"
        android:layout_height="50dp"
        android:layout_below="@+id/etHouse_no"
        android:layout_alignParentStart="@+id/etPostalcode"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="25dp"
        android:background="#fff"
        android:ems="10"
        android:hint="Block/Sector"
        android:textAlignment="center" />


    <EditText
        android:id="@+id/etPostalcode"
        android:layout_width="167dp"
        android:layout_height="50dp"
        android:layout_below="@+id/etRoad_no"
        android:layout_alignParentStart="@+id/etBlock"
        android:layout_alignParentLeft="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginLeft="228dp"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="0dp"
        android:layout_marginRight="5dp"
        android:background="#fff"
        android:ems="10"
        android:hint="Postal Code"
        android:textAlignment="center" />


    <EditText
        android:id="@+id/etArea"
        android:layout_width="167dp"
        android:layout_height="50dp"
        android:layout_below="@+id/etBlock"
        android:layout_alignParentStart="@+id/etPostalcode"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="25dp"
        android:background="#fff"
        android:ems="10"
        android:hint="Area"
        android:textAlignment="center" />


    <EditText
        android:id="@+id/etCity"
        android:layout_width="167dp"
        android:layout_height="50dp"
        android:layout_below="@+id/etPostalcode"
        android:layout_alignParentStart="@+id/etBlock"
        android:layout_alignParentLeft="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginLeft="228dp"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="0dp"
        android:layout_marginRight="5dp"
        android:background="#fff"
        android:ems="10"
        android:hint="Postal Code"
        android:textAlignment="center" />


    <EditText
        android:id="@+id/etAge"
        android:layout_width="167dp"
        android:layout_height="50dp"
        android:layout_below="@+id/etCity"
        android:layout_alignParentStart="@+id/etBlock"
        android:layout_alignParentLeft="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginLeft="228dp"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="0dp"
        android:layout_marginRight="5dp"
        android:background="#fff"
        android:ems="10"
        android:hint="Age"
        android:textAlignment="center" />


    <EditText
        android:id="@+id/etCountry"
        android:layout_width="167dp"
        android:layout_height="50dp"
        android:layout_below="@+id/etArea"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="25dp"
        android:background="#fff"
        android:ems="10"
        android:hint="Country"
        android:textAlignment="center" />



    <EditText
        android:id="@+id/etContractnumber"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:background="#fff"
        android:layout_marginTop="25dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/etCountry"
        android:ems="10"
        android:hint="Contract Number"
        android:textAlignment="center"/>


    <Button
        android:id="@+id/bContinue"
        android:layout_width="89dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/etContractnumber"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"

        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="151dp"
        android:layout_marginLeft="151dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="151dp"
        android:layout_marginRight="151dp"
        android:background="#fff"
        android:text="Continue"
        android:textAlignment="center" />


</RelativeLayout>
